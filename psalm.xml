<?xml version="1.0"?>
<psalm
    errorLevel="2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="bundle" />
        <directory name="lib" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <!-- Doctrine DBAL -->

        <TooManyArguments>
            <errorLevel type="suppress">
                <referencedFunction name="Doctrine\DBAL\Query\QueryBuilder::where" />
            </errorLevel>
        </TooManyArguments>

        <ImplicitToStringCast>
            <errorLevel type="suppress">
                <file name="bundle/Command/MigrateDataV1ToV2Command.php" />
            </errorLevel>
        </ImplicitToStringCast>

        <PossiblyInvalidMethodCall>
            <errorLevel type="suppress">
                <file name="bundle/Command/MigrateDataV1ToV2Command.php" />
            </errorLevel>
        </PossiblyInvalidMethodCall>

        <DeprecatedMethod>
            <errorLevel type="suppress">
                <referencedMethod name="Doctrine\DBAL\Query\QueryBuilder::execute" />
            </errorLevel>
        </DeprecatedMethod>

        <!-- Symfony -->

        <PossiblyUndefinedMethod>
            <errorLevel type="suppress">
                <referencedMethod name="Symfony\Component\Config\Definition\Builder\NodeDefinition::integerNode" />
            </errorLevel>
        </PossiblyUndefinedMethod>

        <PossiblyNullReference>
            <errorLevel type="suppress">
                <file name="bundle/DependencyInjection/Configuration.php" />
            </errorLevel>
        </PossiblyNullReference>

        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <referencedProperty name="Symfony\Component\Validator\ConstraintValidator::$context" />
                <referencedProperty name="Symfony\Component\Validator\Constraint::$groups" />
                <referencedProperty name="Netgen\Bundle\LayoutsRemoteMediaBundle\Command\MigrateDataV1ToV2Command::$output" />
            </errorLevel>
        </PropertyNotSetInConstructor>

        <InvalidArgument>
            <errorLevel type="suppress">
                <file name="lib/ContentBrowser/Backend/RemoteMediaBackend.php" />
                <referencedFunction name="Netgen\RemoteMedia\API\Search\Query::__construct" />
            </errorLevel>
        </InvalidArgument>

        <UndefinedInterfaceMethod>
            <errorLevel type="suppress">
                <file name="bundle/DependencyInjection/Configuration.php" />
                <referencedMethod name="Symfony\Component\Config\Definition\Builder\NodeParentInterface::integerNode" />
            </errorLevel>
        </UndefinedInterfaceMethod>
    </issueHandlers>
</psalm>
