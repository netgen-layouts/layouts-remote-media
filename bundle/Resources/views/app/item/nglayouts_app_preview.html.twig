{% if content.hasField('image') and not content.fields.image.empty %}
    <div class="image">
        {% if content.fields.image.fieldTypeIdentifier is same as 'ngremotemedia' %}
            {{ ng_render_field(
                content.fields.image, {
                    'parameters': {
                        'alias': 'nglayouts_app_preview',
                    }
                }
            ) }}
        {% elseif content.fields.image.fieldTypeIdentifier is same as 'ezimage' %}
            {% set image_alias = ng_image_alias(content.fields.image, 'nglayouts_app_preview') %}

            {% if image_alias %}
                    <img src="{{ asset(image_alias.uri) }}" />
            {% endif %}
        {% endif %}
    </div>
{% endif %}

<div class="name">
    <p><a href="{{ nglayouts_item_path(nglayouts_item) }}" target="_blank" rel="noopener noreferrer">{{ content.name }}</a></p>
</div>

<div class="value-type">
    <p>{{ nglayouts_value_type_name(nglayouts_item) }} ({{ content.innerContent.contentType.name }})</p>
</div>
