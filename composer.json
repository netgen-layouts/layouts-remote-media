{
    "name": "netgen/layouts-remote-media",
    "description": "Netgen Layouts & Remote Media integration",
    "license": "GPL-2.0-only",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://netgen.io"
        }
    ],
    "require": {
        "php": "^8.4",
        "netgen/layouts-core": "^2.0",
        "netgen/remote-media-bundle": "^3.0"
    },
    "require-dev": {
        "netgen/layouts-coding-standard": "^3.0",
        "phpunit/phpunit": "^12.5",
        "phpstan/phpstan": "^2.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "matthiasnoback/symfony-dependency-injection-test": "^6.2"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "*": false
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit -c phpunit.xml --colors=always",
        "coverage": "@php -dzend_extension=xdebug.so -dxdebug.mode=coverage vendor/bin/phpunit -c phpunit.xml --coverage-html=coverage --colors=always",
        "phpstan": "@php vendor/bin/phpstan analyse -c phpstan.neon --ansi",
        "phpstan-tests": "@php vendor/bin/phpstan analyse -c phpstan.tests.neon --ansi"
    },
    "autoload": {
        "psr-4": {
            "Netgen\\Layouts\\RemoteMedia\\": "lib/",
            "Netgen\\Bundle\\LayoutsRemoteMediaBundle\\": "bundle/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netgen\\Layouts\\RemoteMedia\\Tests\\": "tests/lib/",
            "Netgen\\Bundle\\LayoutsRemoteMediaBundle\\Tests\\": "tests/bundle/",
            "Netgen\\ContentBrowser\\Tests\\": "vendor/netgen/content-browser/tests/lib/",
            "Netgen\\Layouts\\Tests\\": "vendor/netgen/layouts-core/tests/lib/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    }
}
